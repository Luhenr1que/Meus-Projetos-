package Teste;
import java.util.Scanner;

public class JogoDaVelha {
	public static void main(String [] args) {
		Scanner in = new Scanner(System.in);
		
		String[][] a =new String [5][5];
		int rodadas,vez;
		String jogada,jogador=" ";
		
	a[0][1]="|";
	a[1][1]="--";
	a[2][1]="|";
	a[3][1]="--";
	a[4][1]="|";
	
	a[1][0]="--";
	a[1][2]="--";
	a[1][4]="--";
	a[3][0]="--";
	a[3][2]="--";
	a[3][4]="--";
	
	a[0][3]="|";
	a[1][3]="---";
	a[2][3]="|";
	a[3][3]="---";
	a[4][3]="|";
	
	a[0][0]="   ";
	a[0][2]="   ";
	a[0][4]="   ";
	a[2][0]="   ";
	a[2][2]="   ";
	a[2][4]="   ";
	a[4][0]="   ";
	a[4][2]="   ";
	a[4][4]="   ";

		
		/*decide se é X ou O*/
		
			for(rodadas=0;rodadas<10;rodadas++) {
				vez = rodadas%2;
					if(vez<=0) {
						jogador=" 1 "; }
					else if(vez>0) {
						jogador=" 2 ";
						}
					if(rodadas==9) {
						System.out.println("Deu velha!!!");
						for(int i=0;i<5;i++) {
							for(int j=0;j<5;j++) {
								System.out.print(a[i][j] );
							}
							System.out.println();
						}				
						break;
					}

					for(int i=0;i<5;i++) {
						for(int j=0;j<5;j++) {
							System.out.print(a[i][j] );
						}
						System.out.println();
					}				
					//1hori	
					if( a[0][0].equals(" X ") & a[0][2].equals(" X ") & a[0][4].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//2hori
					else if( a[2][0].equals(" X ") & a[2][2].equals(" X ") & a[2][4].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//3hori
					else if( a[4][0].equals(" X ") & a[4][2].equals(" X ") & a[4][4].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//1vert
					else if( a[0][0].equals(" X ") & a[2][0].equals(" X ") & a[4][0].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//2verti
					else if( a[0][2].equals(" X ") & a[2][2].equals(" X ") & a[4][2].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//3vert
					else if( a[0][4].equals(" X ") & a[2][4].equals(" X ") & a[4][4].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//1dia
					else if( a[0][0].equals(" X ") & a[2][2].equals(" X ") & a[4][4].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//2dia
					else if( a[0][4].equals(" X ") & a[2][2].equals(" X ") & a[4][0].equals(" X ")) {
						System.out.println("O jogador X venceu!!!");
						break;}
					//1hori
					else if( a[0][0].equals(" O ") & a[0][2].equals(" O ") & a[0][4].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//2hori
					else if( a[2][0].equals(" O ") & a[2][2].equals(" O ") & a[2][4].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//3hori
					else if( a[4][0].equals(" O ") & a[4][2].equals(" O ") & a[4][4].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//1vert
					else if( a[0][0].equals(" O ") & a[2][0].equals(" O ") & a[4][0].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//2vert
					else if( a[0][2].equals(" O ") & a[2][2].equals(" O ") & a[4][2].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//3vert
					else if( a[0][4].equals(" O ") & a[2][4].equals(" O ") & a[4][4].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//1dia
					else if( a[0][0].equals(" O ") & a[2][2].equals(" O ") & a[4][4].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
					//2dia
					else if( a[0][4].equals(" O ") & a[2][2].equals(" O ") & a[4][0].equals(" O ")) {
						System.out.println("O jogador O venceu!!!");
						break;}
				

					System.out.println("Vez do "+jogador+" jogar");					
					
					System.out.println("Em qual posição voce irá jogar?(primeiro horizontal, depois vertical, de 1 a 3,ex: 2,2)");
					jogada=in.next();
					
					if(jogada.equals("1,1")==true) {
						 a[0][0] = jogador;
					}
					else if(jogada.equals("1,2")) {
						a[0][2] = jogador;
					}
					else if(jogada.equals("1,3")) {
						a[0][4] = jogador;
					}
					else if(jogada.equals("2,1")) {
						a[2][0] = jogador;
					}
					else if(jogada.equals("2,2")) {
						a[2][2] = jogador;
					}
					else if(jogada.equals("2,3")) {
						a[2][4] = jogador;
					}
					else if(jogada.equals("3,1")) {
						a[4][0] = jogador;
					}
					else if(jogada.equals("3,2")) {
						a[4][2] = jogador;
					}
					else if(jogada.equals("3,3")) {
						a[4][4] = jogador;
					}

			}
		}
	}


